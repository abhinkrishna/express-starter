							"name": "sign_up",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"((jsonData) => {\r",
											"\r",
											"    if(jsonData.statusCode !== 201) return undefined;\r",
											"\r",
											"    const email = jsonData.data.user.email;\r",
											"    const isAdmin = (email.indexOf(\"admin\") !== -1) ? true : false;\r",
											"    const id = isAdmin ? \"admin_id\" : \"user_id\";\r",
											"    const access = isAdmin ? \"admin_token\" : \"user_token\";\r",
											"    const refresh = isAdmin ? \"admin_refresh\" : \"user_refresh\";\r",
											"\r",
											"    pm.collectionVariables.set(id, jsonData.data.user.id);\r",
											"    pm.collectionVariables.set(access, jsonData.data.access_token);\r",
											"    pm.collectionVariables.set(refresh, jsonData.data.refresh_token);\r",
											"    \r",
											"    console.log(\"Token updated...\")\r",
											"})(JSON.parse(responseBody))\r",
											""
										],
										"type": "text/javascript"
									}
